{
    "contentType": "application/vnd.microsoft.card.adaptive",
    "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "version": "1.0",
        "type": "AdaptiveCard",
        "body": [
        {
            "type": "TextBlock",
            "text": "CTAP Setup Validation",
            "weight": "bolder",
            "size": "large"
        },
        {
            "type": "TextBlock",
            "text": "Open Postman, if not installed, \n\n install using POSTMAN option",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Send POST request \n\n Ex: http://localhost:8004/ctap/init \n\n Use port which you used in default.json",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "If you see response, \n\n Congratulation... \n\n CTAP Setup is done",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "If there is no response/error, \n\n please recheck all steps using CTAP Pre Setup option",
            "separator": true,
            "size": "medium"
        }
        ],
        "actions": [
            {
              "type": "Action.OpenUrl",
              "title": "POSTMAN",
              "url": "https://www.getpostman.com/apps"
            }
        ]
  }
}