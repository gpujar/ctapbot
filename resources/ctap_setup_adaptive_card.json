{
    "contentType": "application/vnd.microsoft.card.adaptive",
    "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "version": "1.0",
        "type": "AdaptiveCard",
        "body": [
        {
            "type": "TextBlock",
            "text": "CTAP Source Code Setup",
            "weight": "bolder",
            "size": "large"
        },
        {
            "type": "TextBlock",
            "text": "Open Git Bash \n\n If not installed, install using below link",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Clone Repository: \n\n git clone git@github3.cisco.com:<cec_id>/ctap.git \n\n Ex: git clone git@github3.cisco.com:<cec_id>/ctap.git",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Install node modules: \n\n cd ctap \n\n ./utils/appserver setup \n\n ./utils/appserver start \n\n cd /tests \n\n npm install",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Tunnelling \n\n ssh -D 33333 vcidev@jump.aws-vpc-bglnammamane.phx.cisco.com \n\n Password: password4Lusers!",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Replace lab-socks.json files in respective CUE & CMA folders",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Start cue server \n\n cd …/ctap/cue \n\n NODE_ENV=lab-socks NODE_CONFIG_DIR=./etc/ node --inspect server.js",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Start cma server \n\n cd …/ctap/cma \n\n NODE_ENV=lab-socks NODE_CONFIG_DIR=./etc/ node server.js",
            "separator": true,
            "size": "medium"
        }
        ],
        "actions": [
            {
              "type": "Action.OpenUrl",
              "title": "Git Bash Installer",
              "url": "https://git-scm.com/downloads"
            },
            {
              "type": "Action.OpenUrl",
              "title": "More Info",
              "url": "https://wiki.cisco.com/display/SPVSSPE/Setting+Up%2C+Starting%2C+and+Stopping+the+Aggregation+%28Application%29+Servers+in+Detail"
            }
        ]
  }
}