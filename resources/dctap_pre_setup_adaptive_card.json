{
    "contentType": "application/vnd.microsoft.card.adaptive",
    "content": {
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "version": "1.0",
        "type": "AdaptiveCard",
        "body": [
        {
            "type": "TextBlock",
            "text": "DCTAP Pre Setup",
            "weight": "bolder",
            "size": "large"
        },
        {
            "type": "TextBlock",
            "text": "Request CRM to get account in github3.",
            "separator": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Register to adam group.",
            "wrap": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Add SSH key to github3 account.",
            "wrap": true,
            "size": "medium"
        },
        {
            "type": "TextBlock",
            "text": "Install latest recommended NodeJS.",
            "wrap": true,
            "size": "medium"
        }
        ],
        "actions": [
            {
              "type": "Action.OpenUrl",
              "title": "GitHub",
              "url": "https://github3.cisco.com/IH/ctap"
            },
            {
              "type": "Action.OpenUrl",
              "title": "ADAM Group",
              "url": "https://mailer.cloudapps.cisco.com/itsm/mailer/listDetails.do?list=application_server_users"
            },
            {
              "type": "Action.OpenUrl",
              "title": "NodeJS Installer",
              "url": "https://nodejs.org/download/release/"
            },
            {
              "type": "Action.OpenUrl",
              "title": "More Info",
              "url": "https://wiki.cisco.com/display/SPVSSPE/First+steps+in+CTAP+Development"
            }
        ]
  }
}